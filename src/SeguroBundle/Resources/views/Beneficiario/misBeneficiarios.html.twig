{% extends 'SeguroBundle:Default:principal.html.twig' %} 
{% block stylesheet %} 
{{ parent() }}
<!-- PAGE LEVEL PLUGIN STYLES -->
<link href="{{ asset ('css/plugins/datatables/datatables.css')}}" rel="stylesheet"> 
{% endblock %} 
{% block contentPage %}
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Mis Beneficiarios</h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-user"></i> Beneficiarios</li>
                    <li><a href="{{path('beneficiarios_socio')}}" class="text-blue">Listado</a></li>
                </ol>
            </div>
        </div>
    </div>
    {{ include('SeguroBundle:mensaje:mensaje.html.twig') }} 
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="row portlet-title">
                        <h4 class="col-md-10">Beneficiarios</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th class="text-center">Nombres</th>
                                    <th class="text-center">Apellido</th>
                                    <th class="text-center">CÃ©dula</th>
                                    <th class="text-center">Fecha Nacimiento</th>
                                    <th class="text-center">Parentesco</th>
                                    <th class="text-center">Fallecido</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if beneficiarios is defined %} 
                                {% for benefi in beneficiarios %}
                                <tr class="gradeC">
                                    <td class="text-center">{{ benefi.nombre }}</td>
                                    <td class="text-center">{{ benefi.apellido }}</td>
                                    <td class="text-center">{{ benefi.cedula }}</td>
                                    <td class="text-center">{{ benefi.fechanacimiento|date('Y-m-d') }}</td>
                                    <td class="text-center">{{ benefi.parentesco }}</td>
                                    {% if benefi.fallecido == 0%}
                                    <td class="text-center">No</td>
                                    <td class="text-center">
                                        <a href="{{ path('editar_beneficiario', {id: benefi.idafiliado}) }}" class="btn btn-orange btn-xs"> Editar<span class="fa fa-edit"></span> </a>
                                    </td>
                                    {% else %}
                                    <td class="text-center">Si</td>
                                    <td class="text-center">--</td>
                                    {% endif %}
                                </tr>
                                {% endfor %} 
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                    {{ include('SeguroBundle:mensaje:mensaje.html.twig') }}
                </div>
            </div>
        </div>

</div>
{% endblock %} 
{% block javascripts %} {{ parent() }}
<!-- HISRC Retina Images -->
<script src="{{ asset ('js/plugins/hisrc/hisrc.js') }}"></script>
<!-- PAGE LEVEL PLUGIN SCRIPTS -->
<script src="{{ asset ('js/plugins/datatables/jquery.dataTables.js') }}"></script>
<script src="{{ asset ('js/plugins/datatables/datatables-bs3.js') }}"></script>
<!-- THEME SCRIPTS -->
<script src="{{ asset('js/flex.js')}}"></script>
<script src="{{ asset('js/demo/advanced-tables-demo.js')}}"></script>
{% endblock %}