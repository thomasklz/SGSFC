{% extends 'SeguroBundle:Default:principal.html.twig' %}
{% block contentPage %}
 <div class="page-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-title">
        <h1>Registrar Usuarios</h1>
        <ol class="breadcrumb">
          <li><i class="fa fa-user"></i> Usuarios</li>
           <li><a href="{{path('lista_usuarios')}}" class="text-blue">Listado</a></li>
          <li class="active">Registrar</li>
        </ol>
      </div>
    </div>
  </div>
  {{ include('SeguroBundle:mensaje:mensaje.html.twig') }}
  {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role': 'form' }} ) }}
    <div class="form-group">
      {{ form_label(form.idtipousuario)}}
      {{ form_widget(form.idtipousuario, { 'attr' : {'class':'form-control', 'name':'idtipousuario'} } ) }}
      <span class="text-danger"> {{ form_errors(form.idtipousuario) }}</span>
    </div>
    <div class="form-group">
      {{ form_label(form.usuario)}}
      {{ form_widget(form.usuario, { 'attr' : {'class':'form-control', 'placeholder': 'Ingresa tu usuario', 'name':'usuario'}}) }}
      <span class="text-danger"> {{ form_errors(form.usuario) }}</span>
    </div>
    <div class="form-group">
      {{ form_label(form.password.first)}}
      {{ form_widget(form.password.first, { 'attr' : {'class':'form-control', 'placeholder': 'Ingresa tu password', 'name':'password'}}) }}
      <span class="text-danger"> {{ form_errors(form.password.first) }}</span>
    </div>
    <div class="form-group">
      {{ form_label(form.password.second)}}
      {{ form_widget(form.password.second, { 'attr' : {'class':'form-control', 'placeholder': 'Ingresa tu password'}}) }}
      <span class="text-danger"> {{ form_errors(form.password.second) }}</span>
    </div>    
    <div class="form-group">
      {{ form_widget(form.save, { 'attr' : {'class':'btn btn-primary'}}) }}
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}


