{% extends 'SeguroBundle:Default:principal.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
<!-- PAGE LEVEL PLUGIN STYLES -->
<link href="{{ asset ('css/plugins/datatables/datatables.css')}}" rel="stylesheet">
{% endblock %}
{% block contentPage %}
<div class="page-content">
    <div clas="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Gestión de Usuarios</h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-user"></i>  <a href="index.html">Usuarios</a></li>
                    <li class="active">Gestión de Usuarios</li>
                </ol>
            </div>
        </div>
    </div>  
   
    <div class="row">
     {{ include('SeguroBundle:mensaje:mensaje.html.twig') }}
        <div class="col-lg-12">
                <div class="portlet portlet-default">
                        <div class="portlet-heading">
                            <div class="row portlet-title">
                                <h4 class="col-md-10"> Lista de Usuarios</h4>
                                <h4 class="col-md-2 ">
                                    <a href="{{ path('nuevo_usuarios') }}" class="btn btn-green btn-xs"> Nuevo 
                                        <span class="fa fa-plus-square"></span> 
                                    </a>
                                </h4>
                            </div>
                        <div class="clearfix"></div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-responsive">
                                <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                    <thead>
                                        <tr>
                                            <th>Rol</th>
                                            <th>Usuario</th>
                                            <th>Fecha de Creación</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% if res is defined %}
                                    {% for key, item1 in res %}
                                    {% for item2 in item1 %}
                                        <tr class="gradeC">
                                            <td>{{ item2.tipo }}</td>
                                            <td>{{ item2.usuario }}</td>
                                            <td>{{ item2.fechacreacion|date('Y:m:d H:m:s') }}</td>
                                            {% if item2.estado == 1 %}
                                            <td>Habilitado</td>
                                            {% else %}
                                            <td>Deshabilitado</td>
                                            {% endif %}
                                            <td class="center">
                                            <a href="{{ path('editar_usuarios', {id: item2.idusuario}) }}" class="btn btn-orange btn-xs"> Editar<span class="fa fa-edit"></span> </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    {% endfor %}  
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<!-- HISRC Retina Images -->
<script src="{{ asset ('js/plugins/hisrc/hisrc.js') }}"></script>
<!-- PAGE LEVEL PLUGIN SCRIPTS -->
<script src="{{ asset ('js/plugins/datatables/jquery.dataTables.js') }}"></script>
<script src="{{ asset ('js/plugins/datatables/datatables-bs3.js') }}"></script>
<!-- THEME SCRIPTS -->
<script src="{{ asset('js/flex.js')}}"></script>
<script src="{{ asset('js/demo/advanced-tables-demo.js')}}"></script>
{% endblock %}