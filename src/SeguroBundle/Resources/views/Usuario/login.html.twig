{% extends '::base.html.twig' %}
{% block title %}::Panel de Sesión::{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-banner text-center">
                    <h1><i class="fa fa-gears"></i> Sistema de Gestión </h1>
                </div>
                <div class="portlet portlet-green">
                    <div class="portlet-heading login-heading">
                        <div class="portlet-title">
                            <span style="font: 1.5em Arial,sans-serif;"><i class="fa fa-users" > </i><strong>  INICIAR SESIÓN</strong></span>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <form  role="form" action="{{ path('Control_login') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" name="txtusuario" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Contraseña" name="txtpassword" type="password">
                                </div>
                                <br>
                                <button type="submit" class="btn btn-lg btn-green btn-block">Ingresar</button>
                            </fieldset>
                        </form>
                          {{ include('SeguroBundle:mensaje:mensaje.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


