{% extends 'SeguroBundle:Default:principal.html.twig' %}
{% block stylesheet %}
{{ parent() }}
<!-- datepicker style -->
 <link href="{{ asset ('css/plugins/bootstrap-datepicker/datepicker3.css')}}" rel="stylesheet">
 <link href="{{ asset ('css/plugins/validate/bootstrapValidator.min.css')}}" rel="stylesheet">
 <link href="{{ asset ('css/plugins/bootstrap-timepicker/bootstrap-timepicker.min.css')}}" rel="stylesheet">
{% endblock %}
{% block contentPage %}
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Registrar Reuni贸n</h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-indent"></i><a href="index.html"> Reuni贸n</a>
                    </li>
                    <li class="active">Registrar</li>
                </ol>
            </div>
        </div>
    </div>
    {{ include('SeguroBundle:mensaje:mensaje.html.twig') }}
    <div class="row">
        {{form_start(form)}}
            <div class="form-group">
                {{ form_label(form.temas)}}
                {{ form_widget(form.temas, { 'attr' : {'class':'form-control', 'name':'temas', 'placeholder': 'Ingresar tema de reuni贸n'}}) }}
                <span class="text-danger"> {{ form_errors(form.temas) }}</span>
            </div>
            <div class="form-group">
                {{ form_label(form.descripcion)}}
                {{ form_widget(form.descripcion, { 'attr' : {'class':'form-control', 'placeholder': 'Ingresar descripci贸n', 'name':'descripcion'}}) }}
                <span class="text-danger"> {{ form_errors(form.descripcion) }}</span>
            </div>
            <div class="row">
                <div class="col-md-3">
                  <label>Fecha</label>
                   <div class="form-group">
                        <div id="sandbox-container">
                            <input class="form-control" id="datetimepicker" type="text" name="datetimepicker" data-date-format="yyyy-mm-dd" />
                        </div>
                    </div>  
                </div>
                <div class="col-md-2">
                    <label>Hora</label>
                    <div class="input-append bootstrap-timepicker input-group">
                        <input id="timepicker1" class="form-control" type="text" name="hora">
                        <span class="input-group-btn">
                            <button class="btn btn-default add-on" type="button"><i class="fa fa-clock-o"></i></button>
                        </span>
                    </div>  
                </div>
            </div>        
            <div class="form-group">
                {{ form_label(form.valorreunion)}}
                {{ form_widget(form.valorreunion, { 'attr' : {'class':'form-control', 'placeholder':'Ingresar valor',  'name':'valorreunion'}}) }}
                <span class="text-danger"> {{ form_errors(form.valorreunion) }}</span>
            </div>
            <div class="form-group">
                {{ form_label(form.valormulta)}}
                {{ form_widget(form.valormulta, { 'attr' : {'class':'form-control', 'placeholder':'Ingresar valor',  'name':'valormulta'}}) }}
                <span class="text-danger"> {{ form_errors(form.valormulta) }}</span>
            </div>
            <div class="form-group">
                {{ form_widget(form.save, { 'attr' : {'class':'btn btn-primary'}}) }}
            </div>
        {{form_end(form)}}
    </div>
</div>    
{% endblock %}
